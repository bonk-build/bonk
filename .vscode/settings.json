{
  "editor.formatOnSave": true,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "[cue]": {
    "editor.insertSpaces": false
  },
  "[go]": {
    "editor.insertSpaces": false,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "mise.configureExtensionsAutomatically": true,
  "mise.configureExtensionsUseSymLinks": true,
  "mise.miseEnv": "vscode",
  "go.goroot": "${workspaceFolder}/.vscode/mise-tools/goRoot",
  "go.lintTool": "golangci-lint",
  "go.lintFlags": [
    "--path-mode=abs",
    "--fast-only"
  ],
  "go.formatTool": "custom",
  "go.alternateTools": {
    "customFormatter": "golangci-lint",
    "go": "${workspaceFolder}/.vscode/mise-tools/go",
    "dlv": "${workspaceFolder}/.vscode/mise-tools/dlv",
    "gopls": "${workspaceFolder}/.vscode/mise-tools/gopls"
  },
  "go.formatFlags": [
    "fmt",
    "--stdin"
  ],
  "go.testFlags": [
    "-v",
    "-race"
  ],
  "gopls": {
    "build.expandWorkspaceToModule": true,
    "formatting.local": "go.bonk.build",
    "build.standaloneTags": [
      "ignore",
      "docs"
    ]
  },
  "buf.commandLine.path": "${workspaceFolder}/.vscode/mise-tools/buf",
  "yaml.schemas": {
    "https://squidfunk.github.io/mkdocs-material/schema.json": "mkdocs.yml",
    "https://golangci-lint.run/jsonschema/golangci.jsonschema.json": ".golangci.yaml"
  },
  "yaml.customTags": [
    "!ENV scalar",
    "!ENV sequence",
    "!relative scalar",
    "tag:yaml.org,2002:python/name:material.extensions.emoji.to_svg",
    "tag:yaml.org,2002:python/name:material.extensions.emoji.twemoji",
    "tag:yaml.org,2002:python/name:pymdownx.superfences.fence_code_format",
    "tag:yaml.org,2002:python/object/apply:pymdownx.slugs.slugify mapping"
  ]
}
