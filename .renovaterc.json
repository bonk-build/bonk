{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "replacements:all"
  ],
  "semanticCommits": "enabled",
  "semanticCommitType": "chore",
  "semanticCommitScope": "deps",
  "packageRules": [
    {
      "description": "automerge all but major updates",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "description": "only update pre-commit hooks weekly",
      "matchManagers": [
        "pre-commit"
      ],
      "groupName": "pre-commit hooks",
      "groupSlug": "pre-commit-hooks",
      "schedule": [
        "* * * * 0"
      ]
    },
    {
      "description": "allow updating go indirect dependencies weekly",
      "matchManagers": [
        "gomod"
      ],
      "matchDepTypes": [
        "indirect"
      ],
      "enabled": true,
      "groupName": "go indirect dependencies",
      "groupSlug": "go-indirect",
      "schedule": [
        "* * * * 0"
      ]
    }
  ],
  "renovate-config-presets": {
    "managerFilePatterns": [
      ".renovaterc.json"
    ]
  },
  "mise": {
    "managerFilePatterns": [
      "/(^|/)\\.?mise/config\\.toml$/",
      "/(^|/)\\.?mise/config\\.\\w+\\.toml$/"
    ]
  },
  "pre-commit": {
    "commitMessageTopic": "pre-commit hook {{depName}}",
    "enabled": true,
    "prBodyNotes": [
      "Note: The `pre-commit` manager in Renovate is not supported by the `pre-commit` maintainers or community. Please do not report any problems there, instead [create a Discussion in the Renovate repository](https://github.com/renovatebot/renovate/discussions/new) if you have any questions."
    ]
  },
  "gomod": {
    "postUpdateOptions": [
      "gomodTidy"
    ]
  }
}
